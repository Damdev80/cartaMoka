---
const { title, description, image, button } = Astro.props;

---
<div class="max-w-sm w-3/6 rounded overflow-hidden shadow-lg bg-white m-2 sm:m-4">
    <img class="w-full h-48 object-cover" src={image} alt={title} />
    <div class="px-4 py-3 sm:px-6 sm:py-4">
    <div class="font-bold text-lg sm:text-xl mb-2">{title}</div>
    <p class="text-gray-700 text-sm sm:text-base">
        {description}
    </p>
    </div>
    <div class="px-4 pt-3 pb-2 sm:px-6 sm:pt-4 sm:pb-2">
    <button class="w-full sm:w-auto bg-tertiary hover:bg-tertiary-dark text-white font-bold py-2 px-4 rounded text-sm sm:text-base">
        {button}
    </button>
    </div>
</div>
