---
const { title, description, image, button } = Astro.props;
---

<div class="w-full rounded overflow-hidden shadow-lg bg-white">
    <img class="w-full h-48 object-cover" src={image} alt={title} />
    <div class="px-4 py-3 sm:px-6 sm:py-4">
        <div class="font-bold text-lg sm:text-xl mb-2 text-primary">{title}</div>
        <p class="text-gray-700 text-sm sm:text-base">
            {description}
        </p>
    </div>
    <div class="px-4 pt-3 pb-2 sm:px-6 sm:pt-4 sm:pb-2">
        <button class="w-full sm:w-auto bg-black hover:bg-primary text-white font-bold py-2 px-4 rounded text-sm sm:text-base transition-colors">
            {button}
        </button>
    </div>
</div>
